= form_for @task, :url => estimate_task_path(params[:estimate_id], @task) do |f|
  = f.text_field :name, :placeholder => "Name for task"
  = f.text_field :rate, :placeholder => "Rate per hour for task"
  = f.text_field :hours, :placeholder => "Estimated number of hours to complete task "
  = f.submit

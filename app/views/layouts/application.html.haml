!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "Estimator"
    %meta{:content => content_for?(:description) ? yield(:description) : "Estimator", :name => "description"}
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    %script{:src => "//use.typekit.net/jnj3tjq.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}
    = csrf_meta_tags
    = yield(:head)

  %body{:class => "#{controller_name} #{action_name}"}
    - unless current_page? root_path or current_page? estimates_path
      %header
        %nav.hidden-menu
          .container
            .nav
              = link_to new_estimate_path do
                %i.icon-doc-new
                New project
              = link_to settings_path do
                %i.icon-cog-1
                Settings
        %nav.container
          = link_to image_tag("e_final.svg"), estimates_path, :class => "logo"
          .nav
            %a{:href => "#"} About
            %a.menu-trigger{:href => "#"}
              %i.icon-menu
    .container
      = yield
    %footer
      .container
        %p ♥ 2013 — Olle Werme
